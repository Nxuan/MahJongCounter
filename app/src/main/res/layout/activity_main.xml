<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mahjongcounter.MainActivity"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/player_changeleft_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:onClick="displayPlayerLeft"
        android:text="@string/to_left"/>
    <TextView
        android:id="@+id/playername_textview"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/player_1"
        android:textSize="20sp" />
    <Button
        android:id="@+id/player_changeright_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:onClick="displayPlayerRight"
        android:text="@string/to_right"/>
</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/total"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/pts_total_textview1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/builds"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/number"
                    android:textAlignment="center"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/pts"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/chi"
                android:textAlignment="center"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/chi_button"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="4"
                    android:onClick="buildClick"
                    android:text="@string/chi" />
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/number_chi_textview"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/pts_chi_textview"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="@string/pong"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/minor_exposed_pong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/minor"
                        android:textSize="10sp"/>
                    <Button
                        android:id="@+id/minor_hidden_pong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/hidden_minor"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/major_exposed_pong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/major"
                        android:textSize="10sp"/>
                    <Button
                        android:id="@+id/major_hidden_pong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/hidden_major"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/number_pong_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/pts_pong_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/kong"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/minor_exposed_kong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/minor"
                        android:textSize="10sp"/>
                    <Button
                        android:id="@+id/minor_hidden_kong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/hidden_minor"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/major_exposed_kong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/major"
                        android:textSize="10sp"/>
                    <Button
                        android:id="@+id/major_hidden_kong_button"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:onClick="buildClick"
                        android:text="@string/hidden_major"
                        android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/number_kong_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/pts_kong_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/others"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/flower_button"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="36dp"
                    android:onClick="buildClick"
                    android:text="@string/flowers_seasons" />
                <TextView
                    android:id="@+id/number_flowers_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/pts_flowers_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/pair_button"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="36dp"
                    android:onClick="buildClick"
                    android:text="@string/major_pair" />
                <TextView
                    android:id="@+id/number_pair_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/pts_pair_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/winner_checkbox"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:text="@string/winner"
                    android:textColor="#616161"
                    android:onClick="buildClick"/>
                <TextView
                    android:id="@+id/pts_winner_texview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/subtotal"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/pts_subtotal_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:textAlignment="center"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/fa_button"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="36dp"
                    android:onClick="buildClick"
                    android:text="@string/fa" />
                <TextView
                    android:id="@+id/number_fa_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/multiply_fa_textview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:gravity="center"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/total"

                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/pts_total_textview2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/_0"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:onClick="resetAll"
                    android:text="@string/reset" />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

